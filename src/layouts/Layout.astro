---
interface Props {
  title: string;
  activePage?: 'research' | 'upload' | 'settings' | 'components';
}

const { title, activePage = 'research' } = Astro.props;
import '@/styles/globals.css';
---

<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - Steady Research Pro</title>
    
    <!-- Èò≤Ê≠¢‰∏ªÈ¢òÈó™ÁÉÅÁöÑËÑöÊú¨ - ÂøÖÈ°ªÂú® head ‰∏≠Á´ãÂç≥ÊâßË°å -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme') || 
                     (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        document.documentElement.classList.toggle('dark', theme === 'dark');
      })();
    </script>
  </head>
  <body class="min-h-screen bg-gradient-to-br from-background via-background to-accent/5 transition-colors duration-300">
    <!-- Top Navigation -->
    <nav class="border-b bg-background/95 backdrop-blur-xl supports-[backdrop-filter]:bg-background/80 fixed top-0 left-0 right-0 z-50 shadow-sm transition-all duration-300">
      <div class="px-6 py-3">
        <div class="flex items-center justify-between max-w-screen-2xl mx-auto">
          <div class="flex items-center">
            <a href="/" class="flex items-center gap-3 group">
              <div class="text-2xl group-hover:scale-110 transition-transform">üî¨</div>
              <div>
                <h1 class="text-lg font-bold bg-gradient-to-r from-primary to-primary/60 bg-clip-text text-transparent">
                  Steady Research Pro
                </h1>
                <p class="text-[10px] text-muted-foreground leading-tight">AI-Powered Research Platform</p>
              </div>
            </a>
          </div>
          
          <!-- Theme Toggle -->
          <div class="flex items-center">
            <button 
              id="theme-toggle"
              class="p-2 text-muted-foreground hover:text-foreground transition-colors rounded-lg hover:bg-accent"
              aria-label="ÂàáÊç¢Ê∑±Ëâ≤Ê®°Âºè"
            >
              <svg id="theme-toggle-light-icon" class="w-5 h-5 hidden" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"></path>
              </svg>
              <svg id="theme-toggle-dark-icon" class="w-5 h-5 hidden" fill="currentColor" viewBox="0 0 20 20">
                <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </nav>

    <!-- Layout Container -->
    <div class="flex pt-[73px] min-h-screen">
      <!-- Left Sidebar -->
      <aside class="w-72 border-r bg-background/95 backdrop-blur-xl supports-[backdrop-filter]:bg-background/80 fixed left-0 top-[73px] bottom-0 overflow-y-auto shadow-sm transition-all duration-300">
        <nav class="p-6 space-y-2">
          <div class="mb-4">
            <p class="text-xs font-semibold text-muted-foreground uppercase tracking-wider px-4">
              Navigation
            </p>
          </div>
          
          <a 
            href="/" 
            class={`flex items-center gap-3 px-4 py-3.5 rounded-lg transition-all duration-200 ${
              activePage === 'research' 
                ? 'bg-primary text-primary-foreground shadow-md scale-[1.02]' 
                : 'hover:bg-accent hover:text-accent-foreground hover:scale-[1.01]'
            }`}
          >
            <span class="text-2xl">üîç</span>
            <div class="flex-1">
              <div class="font-semibold">Research</div>
              <div class="text-xs opacity-80">AI-powered analysis</div>
            </div>
          </a>
          
          <a 
            href="/upload" 
            class={`flex items-center gap-3 px-4 py-3.5 rounded-lg transition-all duration-200 ${
              activePage === 'upload' 
                ? 'bg-primary text-primary-foreground shadow-md scale-[1.02]' 
                : 'hover:bg-accent hover:text-accent-foreground hover:scale-[1.01]'
            }`}
          >
            <span class="text-2xl">üì§</span>
            <div class="flex-1">
              <div class="font-semibold">File Upload</div>
              <div class="text-xs opacity-80">Manage documents</div>
            </div>
          </a>
          
          <a 
            href="/settings" 
            class={`flex items-center gap-3 px-4 py-3.5 rounded-lg transition-all duration-200 ${
              activePage === 'settings' 
                ? 'bg-primary text-primary-foreground shadow-md scale-[1.02]' 
                : 'hover:bg-accent hover:text-accent-foreground hover:scale-[1.01]'
            }`}
          >
            <span class="text-2xl">‚öôÔ∏è</span>
            <div class="flex-1">
              <div class="font-semibold">Settings</div>
              <div class="text-xs opacity-80">Configure app</div>
            </div>
          </a>
        </nav>

        <!-- Sidebar Footer -->
        <div class="absolute bottom-0 left-0 right-0 p-6 border-t bg-background/95">
          <div class="flex items-center gap-3 text-xs text-muted-foreground">
            <div class="flex items-center gap-1">
              <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
              <span>System Online</span>
            </div>
            <span>‚Ä¢</span>
            <span>v1.0.0</span>
          </div>
        </div>
      </aside>

      <!-- Main Content Area -->
      <main class="flex-1 ml-72">
        <div class="container mx-auto px-8 py-10 max-w-screen-2xl">
          <slot />
        </div>

        <!-- Footer -->
        <footer class="border-t mt-20 bg-accent/5">
          <div class="px-8 py-8 max-w-screen-2xl mx-auto">
            <div class="flex flex-col md:flex-row items-center justify-between gap-4">
              <div class="flex items-center gap-2">
                <span class="text-2xl">üî¨</span>
                <div>
                  <p class="font-semibold text-sm">Steady Research Pro</p>
                  <p class="text-xs text-muted-foreground">AI-Powered Research Platform</p>
                </div>
              </div>
              <div class="flex items-center gap-6 text-sm text-muted-foreground">
                <a href="#" class="hover:text-primary transition-colors">Documentation</a>
                <a href="#" class="hover:text-primary transition-colors">GitHub</a>
                <a href="#" class="hover:text-primary transition-colors">Support</a>
              </div>
              <div class="text-xs text-muted-foreground">
                ¬© 2025 Built with ‚ù§Ô∏è using Astro + shadcn/ui
              </div>
            </div>
          </div>
        </footer>
      </main>
    </div>

    <!-- Ê∑±Ëâ≤Ê®°ÂºèÂàáÊç¢ËÑöÊú¨ -->
    <script is:inline>
      const themeToggleBtn = document.getElementById('theme-toggle');
      const themeToggleLightIcon = document.getElementById('theme-toggle-light-icon');
      const themeToggleDarkIcon = document.getElementById('theme-toggle-dark-icon');

      // ÂàùÂßãÂåñÂõæÊ†áÊòæÁ§∫
      function updateThemeIcon() {
        const theme = localStorage.getItem('theme') || 
                     (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        if (theme === 'dark') {
          themeToggleLightIcon.classList.remove('hidden');
          themeToggleDarkIcon.classList.add('hidden');
        } else {
          themeToggleLightIcon.classList.add('hidden');
          themeToggleDarkIcon.classList.remove('hidden');
        }
      }

      updateThemeIcon();

      // ÂàáÊç¢‰∏ªÈ¢ò
      themeToggleBtn.addEventListener('click', function() {
        const currentTheme = localStorage.getItem('theme') || 
                            (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        
        localStorage.setItem('theme', newTheme);
        document.documentElement.classList.toggle('dark', newTheme === 'dark');
        updateThemeIcon();
      });
    </script>
  </body>
</html>
