---
import Layout from '@/layouts/Layout.astro';
import { Button } from '@/components/ui/button';
import { Card, CardHeader, CardTitle, CardDescription, CardContent, CardFooter } from '@/components/ui/card';
import { Input } from '@/components/ui/input';
import { Label } from '@/components/ui/label';
import { Badge } from '@/components/ui/badge';
import { Avatar, AvatarFallback, AvatarImage } from '@/components/ui/avatar';
---

<Layout title="shadcn/ui Components" activePage="components">
  <div class="space-y-8">
    <div>
      <h1 class="text-3xl font-bold mb-4">shadcn/ui Component Showcase</h1>
      <p class="text-muted-foreground">This page showcases the integrated shadcn/ui components in the project</p>
    </div>

    <!-- Buttons Section -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">Buttons</h2>
      <div class="flex flex-wrap gap-2">
        <Button client:load>Default</Button>
        <Button client:load variant="secondary">Secondary</Button>
        <Button client:load variant="destructive">Destructive</Button>
        <Button client:load variant="outline">Outline</Button>
        <Button client:load variant="ghost">Ghost</Button>
        <Button client:load variant="link">Link</Button>
      </div>
      <div class="flex flex-wrap gap-2">
        <Button client:load size="sm">Small</Button>
        <Button client:load size="default">Default</Button>
        <Button client:load size="lg">Large</Button>
        <Button client:load size="icon">
          <span>üîç</span>
        </Button>
      </div>
    </section>

    <!-- Cards Section -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">Cards</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <Card client:load>
          <CardHeader>
            <CardTitle>Card Title</CardTitle>
            <CardDescription>This is the card description text</CardDescription>
          </CardHeader>
          <CardContent>
            <p>This is the main content area of the card. You can place any content here.</p>
          </CardContent>
          <CardFooter>
            <Button client:load className="w-full">Action Button</Button>
          </CardFooter>
        </Card>

        <Card client:load>
          <CardHeader>
            <CardTitle>Simple Card</CardTitle>
            <CardDescription>No footer action area</CardDescription>
          </CardHeader>
          <CardContent>
            <p>This is a simple card example with only title, description, and content.</p>
          </CardContent>
        </Card>

        <Card client:load>
          <CardHeader>
            <CardTitle>Card with List</CardTitle>
          </CardHeader>
          <CardContent>
            <ul class="space-y-2">
              <li class="flex items-center gap-2">
                <span class="text-green-500">‚úì</span>
                <span>Feature One</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-green-500">‚úì</span>
                <span>Feature Two</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-green-500">‚úì</span>
                <span>Feature Three</span>
              </li>
            </ul>
          </CardContent>
        </Card>
      </div>
    </section>

    <!-- Form Elements -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">Form Elements</h2>
      <Card client:load>
        <CardHeader>
          <CardTitle>Login Form Example</CardTitle>
          <CardDescription>Using shadcn/ui form components</CardDescription>
        </CardHeader>
        <CardContent className="space-y-4">
          <div class="space-y-2">
            <Label client:load htmlFor="email">Email Address</Label>
            <Input client:load id="email" type="email" placeholder="your@email.com" />
          </div>
          <div class="space-y-2">
            <Label client:load htmlFor="password">Password</Label>
            <Input client:load id="password" type="password" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" />
          </div>
          <div class="space-y-2">
            <Label client:load htmlFor="name">Username</Label>
            <Input client:load id="name" type="text" placeholder="Enter your username" />
          </div>
        </CardContent>
        <CardFooter className="flex gap-2">
          <Button client:load className="flex-1">Login</Button>
          <Button client:load variant="outline" className="flex-1">Cancel</Button>
        </CardFooter>
      </Card>
    </section>

    <!-- Badges -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">Badges</h2>
      <div class="flex flex-wrap gap-2">
        <Badge client:load>Default</Badge>
        <Badge client:load variant="secondary">Secondary</Badge>
        <Badge client:load variant="destructive">Destructive</Badge>
        <Badge client:load variant="outline">Outline</Badge>
      </div>
      <div class="flex items-center gap-2">
        <span>Status:</span>
        <Badge client:load className="bg-green-500">Online</Badge>
        <Badge client:load className="bg-yellow-500">Away</Badge>
        <Badge client:load className="bg-red-500">Offline</Badge>
      </div>
    </section>

    <!-- Avatars -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">Avatars</h2>
      <div class="flex flex-wrap gap-4">
        <Avatar client:load>
          <AvatarImage src="https://github.com/shadcn.png" alt="@shadcn" />
          <AvatarFallback>CN</AvatarFallback>
        </Avatar>
        <Avatar client:load>
          <AvatarFallback>AB</AvatarFallback>
        </Avatar>
        <Avatar client:load>
          <AvatarFallback>üßë</AvatarFallback>
        </Avatar>
      </div>
    </section>

    <!-- Combined Example -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">Combined Example</h2>
      <Card client:load>
        <CardHeader>
          <div class="flex items-center justify-between">
            <div>
              <CardTitle>User Profile</CardTitle>
              <CardDescription>View and edit user information</CardDescription>
            </div>
            <Badge client:load className="bg-green-500">Verified</Badge>
          </div>
        </CardHeader>
        <CardContent className="space-y-4">
          <div class="flex items-center gap-4">
            <Avatar client:load>
              <AvatarImage src="https://github.com/shadcn.png" alt="User" />
              <AvatarFallback>UN</AvatarFallback>
            </Avatar>
            <div>
              <h3 class="font-semibold">John Doe</h3>
              <p class="text-sm text-muted-foreground">johndoe@example.com</p>
            </div>
          </div>
          <div class="space-y-2">
            <Label client:load htmlFor="bio">Bio</Label>
            <Input client:load id="bio" placeholder="Tell us about yourself..." />
          </div>
        </CardContent>
        <CardFooter className="flex justify-between">
          <Button client:load variant="outline">Cancel</Button>
          <Button client:load>Save Changes</Button>
        </CardFooter>
      </Card>
    </section>

    <!-- Component Usage Guide -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">Usage Guide</h2>
      <Card client:load>
        <CardHeader>
          <CardTitle>How to Use in Your Project</CardTitle>
        </CardHeader>
        <CardContent className="space-y-4">
          <div>
            <h3 class="font-semibold mb-2">1. In Astro Pages</h3>
            <pre class="bg-muted p-4 rounded-lg overflow-x-auto"><code>{`import { Button } from '@/components/ui/button';

<Button client:load>Click Me</Button>`}</code></pre>
          </div>
          <div>
            <h3 class="font-semibold mb-2">2. In React Components</h3>
            <pre class="bg-muted p-4 rounded-lg overflow-x-auto"><code>{`import { Button } from '@/components/ui/button';

export function MyComponent() {
  return <Button onClick={() => alert('Clicked!')}>Click Me</Button>;
}`}</code></pre>
          </div>
          <div>
            <h3 class="font-semibold mb-2">3. Add New Components</h3>
            <pre class="bg-muted p-4 rounded-lg overflow-x-auto"><code>npx shadcn@latest add [component-name]</code></pre>
          </div>
        </CardContent>
      </Card>
    </section>
  </div>
</Layout>
