---
import Dashboard from '@/components/Dashboard.tsx';
import '@/styles/globals.css';
---

<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>仪表板 - Astro Dashboard</title>
  </head>
  <body class="min-h-screen bg-background">
    <!-- Top Navigation -->
    <nav class="border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 fixed top-0 left-0 right-0 z-50">
      <div class="px-4 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <a href="/" class="text-xl font-bold">Steady Research Pro</a>
          </div>
          <div class="flex items-center space-x-4">
            <button class="text-sm font-medium text-muted-foreground hover:text-primary">
              通知 🔔
            </button>
            <button class="text-sm font-medium text-muted-foreground hover:text-primary">
              个人中心 👤
            </button>
          </div>
        </div>
      </div>
    </nav>

    <!-- Layout Container -->
    <div class="flex pt-[73px] min-h-screen">
      <!-- Left Sidebar -->
      <aside class="w-64 border-r bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 fixed left-0 top-[73px] bottom-0 overflow-y-auto">
        <nav class="p-4 space-y-2">
          <a href="/" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-accent hover:text-accent-foreground transition-colors">
            <span class="text-xl">🔍</span>
            <span>Research</span>
          </a>
          <a href="/" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-accent hover:text-accent-foreground transition-colors">
            <span class="text-xl">📤</span>
            <span>File Upload</span>
          </a>
          <a href="/" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-accent hover:text-accent-foreground transition-colors">
            <span class="text-xl">⚙️</span>
            <span>Settings</span>
          </a>
        </nav>
      </aside>

      <!-- Main Content Area -->
      <main class="flex-1 ml-64">
        <div class="container mx-auto px-6 py-8">
          <!-- daisyUI 示例组件 -->
          <div class="mb-8">
            <h2 class="text-2xl font-bold mb-4">daisyUI 组件示例</h2>
            
            <!-- 按钮示例 -->
            <div class="space-x-2 mb-4">
              <button class="btn">默认按钮</button>
              <button class="btn btn-primary">主要按钮</button>
              <button class="btn btn-secondary">次要按钮</button>
              <button class="btn btn-accent">强调按钮</button>
              <button class="btn btn-ghost">幽灵按钮</button>
            </div>

            <!-- 卡片示例 -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
              <div class="card bg-base-100 shadow-xl">
                <div class="card-body">
                  <h2 class="card-title">卡片标题</h2>
                  <p>这是一个 daisyUI 卡片组件示例</p>
                  <div class="card-actions justify-end">
                    <button class="btn btn-primary">操作</button>
                  </div>
                </div>
              </div>

              <div class="card bg-base-100 shadow-xl">
                <figure><div class="h-32 bg-gradient-to-r from-purple-400 to-pink-400"></div></figure>
                <div class="card-body">
                  <h2 class="card-title">带图片的卡片</h2>
                  <p>这个卡片包含顶部图片</p>
                  <div class="card-actions justify-end">
                    <button class="btn btn-ghost">详情</button>
                  </div>
                </div>
              </div>

              <div class="card bg-base-100 shadow-xl">
                <div class="card-body">
                  <h2 class="card-title">
                    徽章
                    <div class="badge badge-secondary">NEW</div>
                  </h2>
                  <p>卡片内可以包含徽章</p>
                  <div class="card-actions justify-end">
                    <div class="badge badge-outline">标签1</div>
                    <div class="badge badge-outline">标签2</div>
                  </div>
                </div>
              </div>
            </div>

            <!-- 提醒框示例 -->
            <div class="space-y-2 mb-4">
              <div class="alert alert-info">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                <span>这是一个信息提示框</span>
              </div>
              <div class="alert alert-success">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                <span>操作成功！</span>
              </div>
            </div>

            <!-- 选项卡示例 -->
            <div class="tabs tabs-boxed mb-4">
              <a class="tab tab-active">选项卡 1</a>
              <a class="tab">选项卡 2</a>
              <a class="tab">选项卡 3</a>
            </div>

            <!-- 进度条示例 -->
            <progress class="progress progress-primary w-full mb-4" value="70" max="100"></progress>

            <!-- 输入框示例 -->
            <div class="form-control w-full max-w-xs mb-4">
              <label class="label">
                <span class="label-text">输入标签</span>
              </label>
              <input type="text" placeholder="请输入内容" class="input input-bordered w-full max-w-xs" />
              <label class="label">
                <span class="label-text-alt">辅助提示文本</span>
              </label>
            </div>

            <!-- 加载动画示例 -->
            <div class="flex gap-4 mb-4">
              <span class="loading loading-spinner loading-xs"></span>
              <span class="loading loading-spinner loading-sm"></span>
              <span class="loading loading-spinner loading-md"></span>
              <span class="loading loading-spinner loading-lg"></span>
            </div>
          </div>

          <Dashboard client:load />
        </div>

        <!-- Footer -->
        <footer class="border-t mt-16">
          <div class="px-6 py-6 text-center text-sm text-muted-foreground">
            <p>© 2025 Steady Research Pro. 使用 Astro + shadcn/ui 构建</p>
          </div>
        </footer>
      </main>
    </div>
  </body>
</html>
